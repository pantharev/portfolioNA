---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard';
import TagCloud from '../components/TagCloud.astro';

const blogs = [
  {
    title: "First Job Learnings",
    date: "2023-10-01",
    excerpt: "A deep dive into using SQL Server, NodeJs, JavaScript, HTML, CSS, jQuery, and building dynamic web applications and ETL tasks.",
    thumbnail: "/Young_professional_dev_2.jpg",
    tags: ["Web Development", "React", "Performance"]
  },
  {
    title: "Learnings From My Projects",
    date: "2023-10-08",
    excerpt: "Reflecting on my passion for creating new applications, learning new technologies, and the endless possibilities in software development.",
    thumbnail: "/Programmer.jpg",
    tags: ["JavaScript", "Web Development", "Frontend"]
  },
  {
    title: "Artificial Intelligence And LLMs",
    date: "2023-10-27",
    excerpt: "My growing interest in AI, large language models, and creating intelligent agents for task automation in web development and data analytics.",
    thumbnail: "/professional_human_worker_ai.jpg",
    tags: ["Database", "SQL", "Backend"]
  }
];

// Get unique tags from all blog posts
const allTags = [...new Set(blogs.flatMap(blog => blog.tags))];
---

<Layout title="Blog Posts - Full Stack Developer" description="Read my articles about web development, programming, and software engineering">
  <div class="py-12">
    <div class="max-w-3xl mb-12">
      <h1 class="text-4xl font-bold mb-4">All blog posts</h1>
      <p class="text-text/80 text-lg">A collection of useful articles I have written over the years. You can select a specific post tag to filter posts for that topic.</p>
    </div>

    <div class="grid lg:grid-cols-4 gap-8">
      <div class="lg:col-span-3">
        <div class="grid gap-8">
          {blogs.map(blog => (
            <BlogCard
              title={blog.title}
              date={blog.date}
              excerpt={blog.excerpt}
              thumbnail={blog.thumbnail}
              client:load
            />
          ))}
        </div>
      </div>

      <aside class="space-y-8">
        <TagCloud />
      </aside>
    </div>
  </div>
</Layout>