---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import BlogCard from '../components/BlogCard';
import SocialCard from '../components/SocialCard.astro';
import TagCloud from '../components/TagCloud.astro';
---

<Layout title="Portfolio - Full Stack Developer">
  <Hero client:load />
  
  <div class="mt-20 grid lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-8">
      <h2 class="text-2xl font-bold">Recent Blog Posts</h2>
      <div class="grid gap-8">
        <BlogCard
          title="Artificial Intelligence And LLMs"
          date="2023-10-27"
          excerpt="My growing interest in AI, large language models, and creating intelligent agents for task automation in web development and data analytics."
          thumbnail="/professional_human_worker_ai.jpg"
          client:load
        />
        <BlogCard
          title="Learnings From My Projects"
          date="2023-10-08"
          excerpt="Reflecting on my passion for creating new applications, learning new technologies, and the endless possibilities in software development."
          thumbnail="/Young_professional_dev_2.jpg"
          client:load
        />
      </div>
    </div>
    
    <aside class="space-y-8">
      <SocialCard />
      <TagCloud />
    </aside>
  </div>
</Layout>