---
interface Props {
  title: string;
  date: string;
  excerpt: string;
  thumbnail: string;
}

const { title, date, excerpt, thumbnail } = Astro.props;
---

<article class="group bg-background border border-primary-purple/20 rounded-lg overflow-hidden hover:border-primary-purple/40 transition-colors">
  <div class="aspect-video overflow-hidden">
    <img
      src={thumbnail}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
    />
  </div>
  <div class="p-6">
    <time datetime={date} class="text-sm text-text/60">
      {new Date(date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
    <h3 class="mt-2 text-xl font-semibold">
      <a href={`/blog/${title.toLowerCase().replace(/\s+/g, '-')}`} class="hover:text-primary-blue">
        {title}
      </a>
    </h3>
    <p class="mt-2 text-text/80 line-clamp-2">
      {excerpt}
    </p>
  </div>
</article>