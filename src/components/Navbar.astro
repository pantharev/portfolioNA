---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/posts', label: 'Posts' },
  { href: '/projects', label: 'Projects' }
];
---

<nav class="sticky top-0 z-50 bg-background/95 backdrop-blur-sm border-b border-primary-purple/20">
  <div class="mx-4 md:mx-8 lg:mx-layout">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="text-2xl font-bold bg-gradient-to-r from-primary-purple to-primary-blue bg-clip-text text-transparent">
        Portfolio
      </a>
      
      <div class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="text-text hover:text-primary-blue transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>

      <button class="md:hidden p-2" aria-label="Menu" id="menu-button">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-4 pt-2 pb-3 space-y-1">
      {navItems.map(item => (
        <a
          href={item.href}
          class="block px-3 py-2 text-text hover:text-primary-blue transition-colors"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const menuButton = document.getElementById('menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>