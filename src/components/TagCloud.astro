---
const tags = [
  'JavaScript',
  'React',
  'Node.js',
  'TypeScript',
  'Python',
  'SQL',
  'C#',
  'Web Development',
  'Backend',
  'Frontend',
  'DevOps'
];
---

<div class="bg-background border border-primary-purple/20 rounded-lg p-6">
  <h3 class="text-xl font-semibold mb-4">Popular Tags</h3>
  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <a
        href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
        class="px-3 py-1 bg-background border border-primary-purple/20 rounded-full text-sm hover:border-primary-purple/40 transition-colors"
      >
        {tag}
      </a>
    ))}
  </div>
</div>