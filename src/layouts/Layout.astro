---
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A modern portfolio website built with Astro" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-background text-text">
    <Navbar />
    <main class="mx-4 md:mx-8 lg:mx-layout">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    min-height: 100vh;
  }
</style>